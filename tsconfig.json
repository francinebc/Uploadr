{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es5",
		"jsx": "react",
		"module": "es6",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"declaration": false,
		"removeComments": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"strictNullChecks": true,
		"outDir": "build",
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"baseUrl": "src",
		"paths": {
			"app/*": [
				"./app/*"
			],
			"assets/*": [
				"./assets/*"
			],
			"__tests__/*": [
				"./__tests__/app/*"
			]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"build",
		"node_modules"
	]
}